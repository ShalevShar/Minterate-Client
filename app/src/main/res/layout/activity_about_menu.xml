<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/general_background">


    <Button
        android:id="@+id/update_password_login_BTN_exitButton"
        style="@style/ButtonSizeSmall"
        android:gravity="center"
        android:text="X"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/aboutUsHeader"
        style="@style/TextSizeExtraLarge"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/js"
        android:hint="About Us"
        android:inputType="text"
        android:padding="12dp"
        android:textColorHint="@color/TextColorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.581"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update_password_login_BTN_exitButton"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcomeHeader"
        style="@style/TextSizeMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aboutUsHeader"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="-6dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/js"
        android:hint="Welcome to Minterate: Redefining Peer-to-Peer Loans"
        android:inputType="text"
        android:padding="12dp"
        android:textColorHint="@color/TextColorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.581"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aboutUsHeader" />

    <TextView
        android:id="@+id/welcomeContent"
        style="@style/TextSizeSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aboutUsHeader"
        android:layout_alignParentStart="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/js"
        android:hint="At Minterate, we're on a mission to transform the lending landscape.\nSay goodbye to traditional financial constraints and welcome a mobile\napplication that connects individuals for direct, cost-effective, and\ntransparent peer-to-peer loans."
        android:inputType="text"
        android:padding="12dp"
        android:textColorHint="@color/TextColorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.581"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeHeader" />

    <TextView
        android:id="@+id/ourVisionHeader"
        style="@style/TextSizeMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aboutUsHeader"
        android:layout_alignParentStart="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/js"
        android:hint="Our Vision"
        android:inputType="text"
        android:padding="12dp"
        android:textColorHint="@color/TextColorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.581"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeContent" />

    <TextView
        android:id="@+id/ourContent"
        style="@style/TextSizeSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aboutUsHeader"
        android:layout_alignParentStart="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="115dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/js"
        android:hint="Minterate is more than just a lending platform. it's a commitment to trust,\ntransparency, and financial inclusion. We're here to revolutionize the way\npeople lend and borrow money by cutting out the middlemen and\nproviding a direct connection between borrowers and lenders."
        android:inputType="text"
        android:padding="12dp"
        android:textColorHint="@color/TextColorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.581"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeContent" />

    <TextView
        android:id="@+id/keyFeaturesHeader"
        style="@style/TextSizeMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aboutUsHeader"
        android:layout_alignParentStart="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="185dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/js"
        android:hint="Key Features"
        android:inputType="text"
        android:padding="12dp"
        android:textColorHint="@color/TextColorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.581"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ourContent" />

    <TextView
        android:id="@+id/keyFeaturesContent"
        style="@style/TextSizeSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aboutUsHeader"
        android:layout_alignParentStart="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="215dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/js"
        android:hint="Loan Requests and Offers: Minterate empowers users to lend and borrow\nmoney seamlessly, creating a network where financial assistance is just a\nclick away. Flexible Loan Terms: Tailor your lending experience with\nMinterate. Negotiate and define personalized loan terms, including amounts,\ninterest rates, and repayment schedules. Reminders and Alerts: Stay on top\nof your financial commitments with built-in reminders and alerts, ensuring a\nsmooth repayment process."
        android:inputType="text"
        android:padding="12dp"
        android:textColorHint="@color/TextColorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.581"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/keyFeaturesHeader" />

    <TextView
        android:id="@+id/securityAndInnovationHeader"
        style="@style/TextSizeMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aboutUsHeader"
        android:layout_alignParentStart="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="321dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/js"
        android:hint="Security and Innovation"
        android:inputType="text"
        android:padding="12dp"
        android:textColorHint="@color/TextColorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.581"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/keyFeaturesContent" />

    <TextView
        android:id="@+id/securityAndInnovationContent"
        style="@style/TextSizeSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aboutUsHeader"
        android:layout_alignParentStart="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="353dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/js"
        android:hint="Minterate tackles the challenges of secure data environments head-on.\nWe prioritize information security, employ robust database architecture,\nand ensure a user-centric design to protect sensitive user information."
        android:inputType="text"
        android:padding="12dp"
        android:textColorHint="@color/TextColorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.581"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/keyFeaturesHeader" />

    <TextView
        android:id="@+id/ourPromiseHeader"
        style="@style/TextSizeMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aboutUsHeader"
        android:layout_alignParentStart="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="411dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/js"
        android:hint="Our Promise"
        android:inputType="text"
        android:padding="12dp"
        android:textColorHint="@color/TextColorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.581"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/securityAndInnovationContent" />

    <TextView
        android:id="@+id/ourPromiseContent"
        style="@style/TextSizeSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aboutUsHeader"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="445dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/js"
        android:hint="The viability of Minterate lies in its promise to provide a more accessible\nand economical lending solution. By connecting people directly, our app\nreshapes financial transactions, offering better interest rates without\ncompromising security."
        android:inputType="text"
        android:padding="12dp"
        android:textColorHint="@color/TextColorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.581"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ourPromiseHeader" />

    <TextView
        android:id="@+id/joinusContent"
        style="@style/TextSizeSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aboutUsHeader"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="519dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/js"
        android:hint="Join us on this journey to financial empowerment with Minterate,where\nlending and borrowing become convenient, cost-effective, and efficient."
        android:inputType="text"
        android:padding="12dp"
        android:textColorHint="@color/TextColorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.581"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ourPromiseContent" />


</RelativeLayout>