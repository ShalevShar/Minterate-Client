<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myapplication.MainActivity"
    android:background="@drawable/main_background">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/main_TVW_heyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/js"
        android:gravity="center"
        android:text=""
        android:textColor="@color/TextColorWhite"
        style="@style/TextSizeLarge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_TVW_totalLoansText"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/main_TVW_totalLoansText"
        style="@style/TextSizeMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:fontFamily="@font/js"
        android:gravity="center"
        android:text="Total loans bal"
        android:textColor="@color/TextColorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_TVW_loansBalText"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/main_TVW_loansBalText"
        style="@style/TextSizeSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/js"
        android:gravity="center"
        android:importantForAccessibility="no"
        android:inputType="text"
        android:text=""
        android:textColor="@color/TextColorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/main_BTN_borrowButton"
        style="@style/ButtonSizeLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="6dp"
        android:backgroundTint="#00FFFFFF"
        android:fontFamily="@font/js"
        android:gravity="left"
        android:text="  Borrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.906"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_TVW_loansBalText"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/main_BTN_lendButton"
        style="@style/ButtonSizeLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#00FFFFFF"
        android:fontFamily="@font/js"
        android:gravity="left"
        android:text="Lend"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.003"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_TVW_loansBalText"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/main_TVW_transactionsText"
        style="@style/TextSizeLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:fontFamily="@font/js"
        android:gravity="left"
        android:text="Transactions"
        android:textColor="@color/TextColorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/blackHorizontalLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/TextColorDarkBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_TVW_transactionsText" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/main_BTN_personalButton"
        style="@style/ButtonSizeMedium"
        android:layout_width="95dp"
        android:layout_height="69dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#00FFFFFF"
        android:drawableLeft="@drawable/ic_personal_button"
        android:gravity="center"
        android:importantForAccessibility="no"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_BTN_lendButton"
        app:layout_constraintVertical_bias="0.989"
        tools:ignore="MissingConstraints,NotSibling"
        tools:layout_editor_absoluteX="0dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/main_BTN_settingButton"
        style="@style/ButtonSizeMedium"
        android:layout_width="101dp"
        android:layout_height="68dp"
        android:layout_marginStart="184dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#00FFFFFF"
        android:drawableLeft="@drawable/ic_setting_button"
        android:gravity="center"
        android:importantForAccessibility="no"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/main_BTN_personalButton"
        app:layout_constraintTop_toBottomOf="@id/main_BTN_borrowButton"
        app:layout_constraintVertical_bias="0.989"
        tools:ignore="MissingConstraints,NotSibling" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/main_transactionRecyclerView"
        android:layout_width="390dp"
        android:layout_height="352dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="-530dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="@id/main_TVW_loansBalText"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
